<ui:WindowsBase  xmlns:ui="clr-namespace:UI;assembly=UI" x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI" xmlns:localt="clr-namespace:WpfUI.View.CtlTempales"
        xmlns:view="clr-namespace:WpfUI.View"
        mc:Ignorable="d"
        CornerRadius="10"   
        WindowState="Maximized"  
        Title="WPFUUI" Height="450" Width="800">
    <ui:WindowsBase.CustomizedAreaContent>
        <Grid>
            <view:WinTitleControl></view:WinTitleControl>
        </Grid>
    </ui:WindowsBase.CustomizedAreaContent>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <localt:MainLeftMenu   BorderThickness="1" BorderBrush="#EAEAEA" />
        </Grid>
        <Grid Grid.Column="1">
            <!--<TextBox  Width="100" Height="30"></TextBox>-->
            <localt:MainTabControl Margin="10"   BorderThickness="1"  BorderBrush="#EAEAEA"  />
            
        </Grid>
    </Grid>
</ui:WindowsBase>
