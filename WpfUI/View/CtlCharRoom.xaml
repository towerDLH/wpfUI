<UserControl x:Class="WpfUI.View.CtlCharRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.View"
             mc:Ignorable="d"  Tag="聊天室"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid   >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBox Text="{Binding SetText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"    ></TextBox>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    <TextBox Text="{Binding SetMsg,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Button Command="{Binding SetCommand}">发送</Button>
                </StackPanel>
            </Grid>
    </Grid>
</UserControl>
